  shadowOAM[7].attr0 = (2<<8);
 } else {
  shadowOAM[7].attr0 = (0xFF & portal.screenRow) | (0<<8) | (0<<14);
  shadowOAM[7].attr1 = (0x1FF & portal.screenCol) | (2<<14);
  shadowOAM[7].attr2 = ((portal.curFrame * 4)*32+(12 + (level-1)*4)) | ((level-1)<<12) | ((1)<<10);
 }
}

void animatePortal() {

 if(portal.aniCounter % 10 == 0) {
  portal.curFrame = (portal.curFrame + 1) % portal.numFrames;
 }
 portal.aniCounter++;
}

