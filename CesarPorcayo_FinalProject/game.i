  if (collision(player.worldRow, player.worldCol, player.height, player.width, clue.worldRow, clue.worldCol, clue.height, clue.width)) {
   clueFound = 1;
   clueHide = 1;
  }

  clue.hide = (clue.screenRow < -clue.height ||clue.screenRow > 160) ? 1 : 0;


  clue.screenRow = clue.worldRow - vOff;
  clue.screenCol = clue.worldCol - hOff;
 } else if (clueFound){
  clue.screenRow = 145;
  clue.screenCol = 200;
 }

 animateClue();

}

void drawClue() {

 if(clue.hide && !clueFound) {
  shadowOAM[4].attr0 = (2<<8);
 } else {
  shadowOAM[4].attr0 = (0xFF & clue.screenRow) | (0<<8) | (2<<14);
  shadowOAM[4].attr1 = (0x1FF & clue.screenCol) | (0<<14);
  shadowOAM[4].attr2 = ((clueTileRow)*32+(clueTileCol)) | ((cluePalRow)<<12) | ((0)<<10);
 }
}

void animateClue() {

 if(clue.aniCounter % 15 == 0 && !clueFound) {
  clue.curFrame = (clue.curFrame + 1) % clue.numFrames;
  clueTileRow = clue.curFrame * 2;
  clueTileCol = 10;
  cluePalRow = 0;
 } else if (clueFound && !crystalFound) {
  if (player.worldRow > crystal.worldRow && player.worldRow - crystal.worldRow < 50) {
   if (player.worldCol > crystal.worldCol && player.worldCol - crystal.worldCol < 50) {
    clueTileCol = 25;
    clueTileRow = 0;
    cluePalRow = 2;
   } else if (player.worldCol < crystal.worldCol && crystal.worldCol - player.worldCol < 50) {
    clueTileCol = 25;
    clueTileRow = 0;
    cluePalRow = 2;
   }
  } else if (player.worldRow < crystal.worldRow && crystal.worldRow - player.worldRow < 50) {
   if (player.worldCol > crystal.worldCol && player.worldCol - crystal.worldCol < 50) {
    clueTileCol = 25;
    clueTileRow = 0;
    cluePalRow = 2;
   } else if (player.worldCol < crystal.worldCol && crystal.worldCol - player.worldCol < 50) {
    clueTileCol = 25;
    clueTileRow = 0;
    cluePalRow = 2;
   }
  } else {
   clueTileRow = 0;
   clueTileCol = 10;
   cluePalRow = 0;
  }
 }
 clue.aniCounter++;
}

void initPortal() {
 portal.width = 32;
 portal.height = 32;
 portal.worldRow = player.worldRow-(portal.height/2)+player.height/2;
 portal.worldCol = player.worldCol-(portal.width/2)+player.width/2;
 portal.aniCounter = 0;
 portal.curFrame = 0;
 portal.numFrames = 4;

}

void updatePortal() {

 if (!crystalFound && !collision(player.worldRow, player.worldCol, player.height, player.width, portal.worldRow,portal.worldCol, portal.height, portal.width)) {
  portalHide = 1;
 }

 portal.hide = (portal.screenRow < -portal.height ||portal.screenRow > 160) ? 1 : 0;


 portal.screenRow = portal.worldRow - vOff;
 portal.screenCol = portal.worldCol - hOff;
 animatePortal();


}

void drawPortal() {

